@model IEnumerable<PinProjekt.Models.TBLartikli>

@{
    ViewBag.Title = "Index";
}

<h2>Dučan</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sifra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kolicina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.slika)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sifra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kolicina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.opis)
        </td>
        <td>  
            <img src="@Html.DisplayFor(modelItem => item.slika)" width="100px" height="100px"/>
        </td>
        <td>
            @Html.ActionLink("Kupi", "Dodaj","kosarica")

        </td>
    </tr>
}

</table>
